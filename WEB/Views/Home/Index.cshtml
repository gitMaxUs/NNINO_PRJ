
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



@model IEnumerable<WEB.Models.StudentViewModel>


@{
    ViewBag.Title = "Index";
}

<h2>@User.Identity.Name</h2>

@using (Html.BeginForm("Casy", "Home"))
{
    foreach (var item in Model)
    {
        <tr> 
            <td>
                <div class="form-group">
                    @Html.LabelFor(modelItem => item.Surname)
                    @Html.CheckBoxFor(modelItem => item.IsPresent) isPresentt
                    @Html.TextBoxFor(modelItem => item.PhoneNumber)
                </div>
            </td>
        </tr>
    }
}

